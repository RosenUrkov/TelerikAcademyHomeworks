extends master

block main
    .container
        form(action="/login" method="post")
            .form-group.row
            label.col-sm-2.col-form-label(for='username') Username
            .col-sm-10
                input#inputEmail3.form-control(type='text', name="username", placeholder='Username')
            .form-group.row
            label.col-sm-2.col-form-label(for='password') Password
            .col-sm-10
                input#inputPassword3.form-control(type='password', name="password", placeholder='Password')           
            .form-group.row
            .offset-sm-2.col-sm-10
                button.btn.btn-primary(type='submit') Sign in
